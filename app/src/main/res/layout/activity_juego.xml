<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DEE8"
    android:padding="16dp"
    tools:context=".JuegoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÃ­tulo del juego -->
        <TextView
            android:id="@+id/titulo_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="ðŸ– PIG GAMES"
            android:textColor="#D7E48BF3"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- InformaciÃ³n del juego -->
        <TextView
            android:id="@+id/info_ronda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFF"
            android:padding="8dp"
            android:text="Ronda: 1/2"
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/info_jugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFF"
            android:padding="8dp"
            android:text="Jugador: 1"
            android:textColor="#666"
            android:textSize="14sp" />

        <!-- Ãrea del dado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="ðŸŽ² Tu DADO Favorito"
            android:textColor="#673AB7"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagen_dado"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#FFF"
            android:src="@drawable/dado1" />

        <TextView
            android:id="@+id/texto_puntos_turno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Puntos del turno: 0"
            android:textColor="#666"
            android:textSize="14sp" />

        <!-- Botones de juego -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_lanzar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text=" LANZAR"
                android:textColor="#FFF"
                android:textSize="14sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/boton_mantener"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text=" MANTENER"
                android:textColor="#FFF"
                android:textSize="14sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <!-- Estado del juego -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Estado:"
            android:textColor="#333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texto_estado_juego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#E8F5E8"
            android:gravity="center"
            android:padding="8dp"
            android:text="Â¡Partida iniciada!"
            android:textColor="#666"
            android:textSize="12sp" />

        <!-- Puntuaciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Puntuaciones:"
            android:textColor="#333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tableroPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFF"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:text="Cargando..."
            android:textColor="#333"
            android:textSize="14sp" />

        <!-- Reglas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:gravity="center"
            android:padding="8dp"
            android:text="! Reglas: Tira el dado y acumula puntos. Si sacas 1, pierdes todo."
            android:textColor="#666"
            android:textSize="10sp" />

    </LinearLayout>

</ScrollView>