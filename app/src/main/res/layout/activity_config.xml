<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Sección Rondas -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#84E9E6EC"
            android:gravity="center"
            android:padding="20dp"
            android:text="Configuración Juego"
            android:textColor="#9C27B0"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texNumJugadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Número Rondas"
            android:textColor="#9C27B0"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numrondas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#C6EDE1EE"
            android:hint="Ejemplo: 5"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="#E91E63"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Número Jugadores"
            android:textColor="#9C27B0"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#C6EEE6EF"
            android:padding="8dp"
            tools:scrollbarSize="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>